    <div class="section section-api" id="api">
        <h1 class="title">
            <span class="text">API</span>
        </h1>
        <ul class="ul-apis">
            <li>
                <h3><code>new Checkbox ( name,$element, checked, events ) </code>构造函数</h3>
                <table>
                    <tr>
                        <th>参数</th>
                        <th>说明</th>
                        <th>类型</th>
                        <th>默认值</th>
                    </tr>
                    <tr>
                        <td>name</td>
                        <td>组件名称</td>
                        <td>String</td>
                        <td>-</td>
                    </tr>
                    <tr>
                        <td>$element</td>
                        <td>组件jquery实例</td>
                        <td>JQeruy</td>
                        <td>-</td>
                    </tr>
                    <tr>
                        <td>checked</td>
                        <td>是否选中</td>
                        <td>Boolean</td>
                        <td>-</td>
                    </tr>
                    <tr>
                        <td>events</td>
                        <td>事件函数，目前默认只提供click</td>
                        <td>Object { Function }</td>
                        <td>-</td>
                    </tr>
                </table>
            </li>
            <li>
                <h3>
                    <code>checkbox.set ( checked ) </code>
                    设置选中状态
                </h3>
                <table>
                    <tr>
                        <th>参数</th>
                        <th>说明</th>
                        <th>类型</th>
                        <th>默认值</th>
                    </tr>
                    <tr>
                        <td>checked</td>
                        <td>选中状态</td>
                        <td>Boolean</td>
                        <td>false</td>
                    </tr>
                </table>
            </li>            
            <li>
                <h3>
                    <code>checkbox.setText ( text ) </code>
                    设置checkbox文本
                </h3>
                <table>
                    <tr>
                        <th>参数</th>
                        <th>说明</th>
                        <th>类型</th>
                        <th>默认值</th>
                    </tr>
                    <tr>
                        <td>text</td>
                        <td>文本</td>
                        <td>String</td>
                        <td>-</td>
                    </tr>
                </table>
            </li>
            <li>
                <h3>
                    <code>on ( name , func )</code>
                    注册事件
                </h3>
                <table>
                    <tr>
                        <th>参数</th>
                        <th>说明</th>
                        <th>类型</th>
                        <th>默认值</th>
                    </tr>
                    <tr>
                        <td>name</td>
                        <td>事件名称</td>
                        <td>String</td>
                        <td>-</td>
                    </tr>
                    <tr>
                        <td>func</td>
                        <td>事件函数</td>
                        <td>Function</td>
                        <td>-</td>
                    </tr>
                </table>
            </li>
            <li>
                <h3>
                    常用示例
                </h3>
                <pre class="language-javascript">
                <code class="javascript">
    var cb = new Checkbox ( 'checkbox' , $('#checkbox') , true , {
        click : function () {
            console.log( '构造函数click' );
        }
    });

    cb.set( false );
    cb.setText( '测试' );
    cb.on( 'click' , function( ){
        console.log('注册事件click');
    });
                    </code>
                </pre>
            </li>
        </ul>
    </div>
</div>